<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |d| %>
  <p>
    <%= d.id %>
    <%= d.description %>
    <%= Ingredient.find(d.ingredient_id).name %>
    <%= link_to "delete", cocktail_dose_path(cocktail_id: @cocktail.id, id: d.id), method: :delete %>
  </p>
<% end %>

<p></p>
<%= link_to "add a dose", new_cocktail_dose_path(cocktail_id: @cocktail.id) %>
<%= link_to "back to cocktail list", cocktails_path %>
